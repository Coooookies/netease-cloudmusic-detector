{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "rootDir": ".",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "ts-node": {
    "files": true
  },
  "includes": ["src/**/*", "addon/**/*"],
  "exclude": ["build/**/*", "scripts/**/*", "config/**/*"]
}
